# Database
DATABASE_PATH=../../data/mediterana.db

# Auth
NEXTAUTH_SECRET=generate-a-secure-secret-here
NEXTAUTH_URL=http://localhost:3000

# Storage
STORAGE_TYPE=local

# Site
NEXT_PUBLIC_SITE_URL=https://www.mediteranayachting.com

# Email (Resend)
RESEND_API_KEY=your_resend_api_key
CONTACT_EMAIL=hello@mediteranayachting.com

# Spam Protection (Cloudflare Turnstile)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Legacy Sanity (will be removed after migration)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_READ_TOKEN=your_read_token

# Backup Management (Production SSH)
BACKUP_SSH_HOST=your_server_ip
BACKUP_SSH_USER=root
BACKUP_SSH_KEY_PATH=/path/to/ssh/key
